<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirstApp.SliderTestPage"
             Title="SliderTestPage"
             BackgroundColor="White">
    <StackLayout>
        <Slider VerticalOptions="Center" ValueChanged="OnSliderValueChanged" />
        <Label x:Name="LblValue" 
               Text="A simple Label"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Button Text="Click Meme!"
                HorizontalOptions="Center"
                VerticalOptions="Center" Clicked="OnButtonClicked" />
    </StackLayout>
</ContentPage>