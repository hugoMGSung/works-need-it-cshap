<Window x:Class="wp02_simplecontrols.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp02_simplecontrols"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="250" Loaded="Window_Loaded">
    <StackPanel>
        <TextBlock Text="텍스트블럭" Width="100" />
        <Label Content="라벨컨트롤" Width="100" />
        <TextBox Text="텍스트박스" Width="100" />
        <PasswordBox Password="패스워드박스" Width="100" />
        <Slider x:Name="SldStep" Value="0" Width="100" ValueChanged="SldStep_ValueChanged" />
        <ProgressBar x:Name="PgbStep" Value="0" Width="100" Height="15" Maximum="10" />

        <Image Source="Resources/xaml.png" Width="32" Height="32" />
        <MediaElement x:Name="MediaPlayer" Source="" Width="180" Height="100" LoadedBehavior="Manual" />
    </StackPanel>
</Window>
